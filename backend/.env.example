# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1


# Neon/PostgreSQL connection string (preferred for Vercel/Neon)
DATABASE_URL=postgresql://<DB_USERNAME>:<DB_PASSWORD>@<DB_HOST>/<DB_NAME>?sslmode=require&channel_binding=require

# Legacy fields (optional, fallback if DATABASE_URL not set)
DB_HOST=<DB_HOST>
DB_PORT=5432
DB_USERNAME=<DB_USERNAME>
DB_PASSWORD=<DB_PASSWORD>
DB_DATABASE=<DB_NAME>

# Redis
# For local development, use localhost (docker-compose.db.yml exposes ports)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_TTL=3600

# Radio Browser API
RADIO_BROWSER_API_URL=https://de1.api.radio-browser.info

# CORS
# Support multiple origins: localhost for dev, GitHub Codespaces, and Vercel frontend deployment
# Pattern matches: https://{name}-{any-port}.app.github.dev, https://global-radio-podcast.vercel.app
CORS_ORIGIN=http://localhost:5173,https://*.app.github.dev,https://<VERCEL_APP_NAME>.vercel.app

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
