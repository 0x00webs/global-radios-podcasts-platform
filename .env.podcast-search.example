# Multi-Provider Podcast Search Configuration
# Copy this file to .env and fill in your API keys

# ==============================================================================
# APPLE iTUNES API (No authentication required)
# ==============================================================================
PODCAST_APPLE_ENABLED=true
PODCAST_APPLE_PRIORITY=1
PODCAST_APPLE_TIMEOUT_MS=5000
PODCAST_APPLE_CACHE_MS=3600000
PODCAST_APPLE_BASE_URL=https://itunes.apple.com/search

# ==============================================================================
# PODCAST INDEX API (Free tier, requires registration)
# Register at: https://podcastindex.org/
# ==============================================================================
PODCAST_INDEX_ENABLED=true
PODCAST_INDEX_PRIORITY=2
PODCAST_INDEX_TIMEOUT_MS=5000
PODCAST_INDEX_CACHE_MS=3600000
PODCAST_INDEX_BASE_URL=https://api.podcastindex.org/api/1.0
PODCAST_INDEX_API_KEY=your_podcast_index_api_key
PODCAST_INDEX_API_SECRET=your_podcast_index_api_secret

# ==============================================================================
# TADDY API (Optional, 500 requests/month free tier)
# Register at: https://taddy.org/
# IMPORTANT: Track monthly usage to avoid hitting limits
# ==============================================================================
PODCAST_TADDY_ENABLED=false
PODCAST_TADDY_PRIORITY=3
PODCAST_TADDY_TIMEOUT_MS=8000
PODCAST_TADDY_CACHE_MS=3600000
PODCAST_TADDY_BASE_URL=https://api.taddy.org
TADDY_API_KEY=your_taddy_api_key
PODCAST_TADDY_RATE_LIMIT=500
PODCAST_TADDY_RATE_PERIOD_SECONDS=2592000

# ==============================================================================
# SEARCH SETTINGS
# ==============================================================================
PODCAST_SEARCH_DEFAULT_LIMIT=20
PODCAST_SEARCH_MAX_LIMIT=50
PODCAST_SEARCH_CACHE_TTL_MS=3600000

# ==============================================================================
# NOTES
# ==============================================================================
# - Apple iTunes: No auth required, unlimited requests
# - Podcast Index: Free account includes unlimited API access
#   Get keys from: https://podcastindex.org/api/auth
# - Taddy: 500 requests/month on free tier
#   Track usage and implement alerts around 400+ requests
# ==============================================================================
